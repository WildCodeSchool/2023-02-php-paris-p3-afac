{% extends 'base.html.twig' %}

{% block title %}Work
{% endblock %}

{% block body %}

	<div class="work">
		<div class="first">
			<div class="square2">
				<figure class="zoom">
					<img src="{{ vich_uploader_asset(work) }}" class="img-thumbnail grayscale picture">
					<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
					<script type="text/javascript">
						$(document).ready(function () {
$("body").on("contextmenu", function (e) {
return false;
});
});
					</script>
				</figure>
			</div>
		</div>
		<div class="second">
			<div class="detail">
				<h2>{{ work.name }}</h2>
				<p>Date de réalisation -
					{{ work.publishedAt }}
				</p>
				<p>Référence -
					{{ work.reference }}
				</p>
				<p>Format -
					{{ work.format }}
				</p>
			</div>
		</div>
	</div>

	<div class="description">
		<p>{{ work.description }}</p>
	</div>


	<div class="twobuttons">
		<div>
			<a type="button" class="btn btn-lg" href="{{ path('app_work_edit', {'id': work.id}) }}">Modifier une oeuvre</a>
		</div>

		<div>
			{{ include('work/_delete_form.html.twig', {'button_label': 'Supprimer une oeuvre'}) }}
		</div>
	</div>


	<div>
		<a type="button" class="btn btn-secondary" href="{{ path('app_work_index') }}">Retour à la galerie
		</a>
	</div>

	<p class="description2">Images non libres de droit</p>
{% endblock %}
