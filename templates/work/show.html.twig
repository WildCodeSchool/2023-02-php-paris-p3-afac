{% extends 'base.html.twig' %}

{% block title %}Work
{% endblock %}

{% block body %}
	<h1>Work</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ work.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ work.name }}</td>
			</tr>
			<tr>
				<th>PublishedAt</th>
				<td>{{ work.publishedAt }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ work.description }}</td>
			</tr>
			<tr>
				<th>Reference</th>
				<td>{{ work.reference }}</td>
			</tr>
			<tr>
				<th>Format</th>
				<td>{{ work.format }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<img src="../build/images/{{ work.picture }}" class="img-thumbnail grayscale work-pictures">
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_work_index') }}">back to list</a>

