{% extends 'base.html.twig' %}

{% block title %}Work
{% endblock %}

{% block body %}

	<h1>Toutes les Oeuvres</h1>

	<div class="button">
		{% for technique in constant('App\\Entity\\Technique::TECHNIQUES') %}
			<a button type="button" class="btn btn-secondary" href="{{ path('app_work_index', {techniqueName: technique }) }}">{{ technique|capitalize }}</button><a/>
		{% endfor %}
	</div>

	<br>

	<div class="row">
		{% for work in works %}
			<div class="col-sm-6 col-md-5 col-lg-3 col-xl-3 mt-3">
				<figure class="square">
					<img
					src="../build/images/{{ work.picture }}" class="img-thumbnail grayscale work-pictures">
					{# <img src="{{ vich_uploader_asset(work) }}" alt="{{ work.name }} class="img-thumbnail grayscale work-pictures"> #}
					<figcaption>{{ work.name }}</figcaption>
					<div class="eye">
						<a href="{{ path('app_work_show', {'id': work.id}) }}" target="blank"><img src="../build/images/eye.625866c0.png" alt="eye-icon" class="" height="30"></a>
					</div>
				</figure>
			</div>
		{% endfor %}
	</div>
	<p>Images non libres de droit</p>
{% endblock body %}
