{% extends 'base.html.twig' %}

{% block title %}Work
{% endblock %}

{% block body %}
	<main>
		<h3>Les oeuvres de Hippolyte Charles Napoléon MORTIER, Duc de Trévise</h3>

		<div class="twobuttons2">
			{% for technique in constant('App\\Entity\\Technique::TECHNIQUES') %}
				<a button type="button" class="btn btn-lg" href="{{ path('app_work_index', {techniqueName: technique }) }}">{{ technique|capitalize }}<a/>
				{% endfor %}
			</div>


			<div class="row">
				{% for work in works %}
					<div class="col-sm-6 col-md-5 col-lg-3 col-xl-3 mt-3">
						<figure class="square">
							<a href="{{ path('app_work_show', {'id': work.id}) }}"><img src="{{ vich_uploader_asset(work) }}" class="img-thumbnail grayscale work-pictures zoom2"></a>
							<figcaption>{{ work.name }}</figcaption>
						</figure>
					</div>
				{% endfor %}
			</div>

			<div class="buttoncenter">
				<a button type="button" class="btn btn-lg" href="{{ path('app_work_new') }}">Créer une oeuvre<a/>
				</div>

				<p>Images non libres de droit</p>

			</main>
		{% endblock body %}
