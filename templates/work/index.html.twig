{% extends 'base.html.twig' %}

{% block title %}Work
{% endblock %}

{% block body %}

	<h1>Toutes les Oeuvres</h1>

	<div class="button">
		<a button type="button" class="btn btn-secondary" href="{{ path('technique_show', {techniqueName: 'dessin'}) }}">Dessin</button><a/>
		<a button type="button" class="btn btn-secondary" href="{{ path('technique_show', {techniqueName: 'aquarelle'}) }}">Aquarelle</button><a/>
	</div>

	<div class="row">
		{% for work in works %}
			<div class="col-sm-6 col-md-4 col-lg-4 col-xl-4 mt-4">
				<figure class="square">
					<img src="../build/images/{{ work.picture }}" class="img-thumbnail grayscale work-pictures">
					<figcaption>{{ work.name }}</figcaption>
					<a href="" target="blank"><img src="../build/images/eye.625866c0.png" alt="eye-icon" class="" height="30"></a>
				</figure>
			</div>
		{% endfor %}
	</div>

	<p>Images non libres de droit</p>

{% endblock body %}
