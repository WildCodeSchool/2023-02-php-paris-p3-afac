{% extends 'base.html.twig' %}

{% block title %}Galerie
{% endblock %}

{% block body %}
	<main>
		<h3>Les oeuvres de Hippolyte Charles Napoléon MORTIER, Duc de Trévise</h3>

		<div class="twobuttons2">
			{% for technique in constant('App\\Entity\\Technique::TECHNIQUES') %}
				<a type="button" class="btn btn-secondary" href="{{ path('app_work_index', {techniqueName: technique }) }}">{{ technique|capitalize }}</a>
			{% endfor %}
		</div>

		<div class="buttoncenter">
			<a type="button" class="btn btn-lg" href="{{ path('app_work_new') }}">Ajouter une oeuvre</a>
		</div>

		<div class="row">
			{% for work in works %}
				<div class="col-sm-6 col-md-5 col-lg-3 col-xl-3 mt-3">
					<figure class="square">
						<a href="{{ path('app_work_show', {'id': work.id}) }}"><img src="{{ vich_uploader_asset(work) }}" class="img-thumbnail grayscale work-pictures zoom2"></a>
						<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
						<script type="text/javascript">
							$(document).ready(function () {
$("body").on("contextmenu", function (e) {
return false;
});
});
						</script>
						<figcaption>{{ work.name }}</figcaption>
					</figure>
				</div>
			{% endfor %}
		</div>

		<p class="description2">Images non libres de droit</p>

	</main>
{% endblock body %}
