{% extends 'base.html.twig' %}

{% block title %}Galerie
{% endblock %}

{% block body %}
	<main>
		<h3>Les oeuvres de Hippolyte Charles Napoléon MORTIER, Duc de Trévise</h3>

		<div class="buttoncenter">
			<a type="button" class="btn btn-secondary" href="{{ path('app_work_index') }}">Retour à la galerie</a>
		</div>

		<p class="description2">Nombre de résultats :

			{% set count = 0 %}
			{% for work in works %}
				{% set count = count + 1 %}
			{% endfor %}

			{{ count }}

		</p>

		<div class="row">
			{% for work in works %}
				<div class="col-sm-6 col-md-5 col-lg-3 col-xl-3 mt-3">
					<figure class="square">
						<a href="{{ path('app_work_show', {'id': work.id}) }}"><img src="{{ vich_uploader_asset(work) }}" class="img-thumbnail grayscale work-pictures zoom2"></a>
						<figcaption>{{ work.name }}</figcaption>
					</figure>
				</div>
			{% endfor %}
		</div>

		<p class="description2">Images non libres de droit</p>
	</main>
{% endblock body %}
